{
    "name": "huangdijia/hyperf-config-array",
    "type": "library",
    "require": {
        "php": ">=7.2",
        "hyperf/utils": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "hyperf/command": "^2.0",
        "hyperf/event": "^2.0",
        "hyperf/framework": "^2.0",
        "hyperf/process": "^2.0",
        "hyperf/server": "^2.0",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "^4.5"
    },
    "description": "Config extension for Hyperf.",
    "autoload": {
        "psr-4": {
            "Huangdijia\\ConfigArray\\": "src/"
        }
    },
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src ./publish",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Huangdijia\\ConfigArray\\ConfigProvider"
        }
    }
}